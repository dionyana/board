<%
    if (typeof(error) == "undefined") {
        error = '';
    }
%>
<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <title>投稿 - Board</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <script>
            function setUpload() {
                var message = document.form_textarea.message.value;
                document.form_upload.h_message.value = message;
            }
            function setCancel() {
                var message = document.form_textarea.message.value;
                document.form_cancel.h_message.value = message;                               
            }
    </script>
    </head>
    <body>
        <nav class="navbar bg-light">
            <a class="navbar-brand" href="/index/">Board</a>
        </nav>
        <div class="container">
            <p>
                <%= error %>
            </p>
        <div>
            <% if (!image) { %>
                <form action="/upload" method="POST" enctype="multipart/form-data" name="form_upload">
                    <div class="form-group">
                        <input type="file" name="file">
                        <input type="hidden" name="h_message">
                        <input type="submit" class="btn btn-primary" value="イメージ確認" onclick="setUpload();">
                    </div>
                </form>
            <% } else { %>
                <form action="/cancel" method="POST" name="form_cancel">
                    <div class="form-group">
                        <input type="hidden" name="h_message">
                        <input type="submit" class="btn btn-primary" value="イメージ取消" onclick="setCancel();">
                    </div>
                </form>
            <% } %>
            </div>
            <div>
                <form action="/insert" method="POST" name="form_textarea">
                    <% if (image) { %>
                        <div class="form-group">
                            <img src="<%= image %>" name="image" width="200" height="200">
                            <input type="hidden" name="h_img" value="<%= image %>">
                        </div>
                    <% } %>
                    <div class="form-group">    
                    <% if (message) { %>
                        <textarea name="message" rows="5" class="form-control"><%= message %></textarea>
                    <% } else { %>
                        <textarea name="message" rows="5" class="form-control"></textarea>
                    <% } %>
                        <input type="submit" class="btn btn-primary" value="投稿">
                    </div>
                </form>
            </div>
    </body>
</html>