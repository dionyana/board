<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <title>完了 - Board</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="/css/bootstrap.min.css">
    </head>
    <body>
        <nav class="navbar bg-light">
                <a class="navbar-brand" href="/">Board</a>
                <% if (login_user) { %>
                    <span class="navbar-text">
                        <%= login_user %>でログイン中
                    </span>
                <% } %>
                <ul class="nav">
                    <% if (login_user) { %>
                        <li class="nav-item">
                            <a href="/token" class="nav-link">トークン</a>
                        </li>
                        <li class="nav-item">
                            <a href="/logout" class="nav-link">ログアウト</a>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a href="/login" class="nav-link">ログイン</a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        <div class="container">
            <p>
            <%- message %>
            </p>
            <% if (mail) { %>
                <%= mail %>
            <% } %>
        </div>
    </body>
</html>